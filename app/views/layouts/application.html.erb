  </head>

  <body>
    <nav class="navbar">
  <div class="container">
    <div class="navbar-header">
      <div class="banner_title">
        <h1> Mister Cocktail </h1>
      </div>
      <%= link_to "New Cocktail", new_cocktail_path  %>
      <%= link_to "home", cocktails_path  %>
    </div>
  </div>
</nav>
  <div class="container">
    <%= yield %>
  </div>
    <%= javascript_include_tag "application" %>
    <%= javascript_pack_tag "application" %>
  </body>
</html>
