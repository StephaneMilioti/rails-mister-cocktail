<h1>
  <strong><%= @cocktail.name %></strong>
</h1>
<div class="card-img-show"> <%= image_tag(@cocktail.image, size: "500x300") %>
      </div>
<div class="recette">
  <h4>  The recipe : </h4>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li> <%= dose.ingredient.name %> - <%= dose.description %> <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, dose_path(dose), data: {:confirm => 'Are you sure?'}, method: :delete %>
 </li>
<% end %>
</ul>
</div>
<h2>Add an ingredient</h2>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :ingredient_id, collection: @ingredients %>
    <%= f.input :description%>
  </div>

  <div class="form-actions">
    <%= f.submit class:"btn btn-primary"%>
  </div>
<% end %>




